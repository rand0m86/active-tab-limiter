{
    "manifest_version": 2,

    "name": "Active Tab Limiter",
    "description": "Limits amount of currently opened tabs and closes old ones if new tabs are opened",
    "version": "0.0.2",

    "browser_action": {
    },

    "background": {
        "scripts": ["install.js", "background.js"],
        "persistent": false
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ]
}
